<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.79"
        android:src="@drawable/lunch_choice_title" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.02"
        android:text="@string/select_food_question_str"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageButton
        android:id="@+id/imgRandomFoodBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/random_button" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_gravity="center">

        <ImageButton
            android:id="@+id/imgKorFoodBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="left"
            android:layout_weight="0.09"
            android:src="@drawable/korean_food_button" />

        <ImageButton
            android:id="@+id/imgChiFoodBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgKorFoodBtn"
            android:layout_gravity="center_horizontal"
            android:layout_toEndOf="@+id/imgKorFoodBtn"
            android:layout_toRightOf="@+id/imgKorFoodBtn"
            android:layout_weight="0.09"
            android:src="@drawable/chinese_food_button" />

        <ImageButton
            android:id="@+id/imgJpnFoodBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgChiFoodBtn"
            android:layout_gravity="center_horizontal"
            android:layout_toEndOf="@+id/imgChiFoodBtn"
            android:layout_toRightOf="@+id/imgChiFoodBtn"
            android:layout_weight="0.09"
            android:src="@drawable/japanese_food_button" />

        <ImageButton
            android:id="@+id/imgRstFoodBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imgKorFoodBtn"
            android:src="@drawable/restaurant_food_button" />

        <ImageButton
            android:id="@+id/imgDessertFoodBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgKorFoodBtn"
            android:layout_toEndOf="@+id/imgRstFoodBtn"
            android:layout_toRightOf="@+id/imgRstFoodBtn"
            android:src="@drawable/dessert_food_button" />

        <ImageButton
            android:id="@+id/imgEtcFoodBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imgJpnFoodBtn"
            android:layout_alignStart="@+id/imgJpnFoodBtn"
            android:layout_alignTop="@+id/imgDessertFoodBtn"
            android:src="@drawable/etc_food_button" />
    </RelativeLayout>

</LinearLayout>